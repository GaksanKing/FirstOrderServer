<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href="/bootstrap/css/bootstrap.css" />
    <script src="/jquery/jquery-3.4.1.min.js"></script>
    <style>
        th{
            text-align: center;
        }
        td{
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>[<%= id %>]<%= name %>학생</h1>
    <table class="table" style="margin-top:20px">
        <tr>
            <td style="width: 60%;">
                <div class="btn-group mr-2" role="group" aria-label="First group">
                    <% for(var i =0; i<date.length; i++) {%>
                    <button class="btn btn-info" style="margin-bottom: 10px;" onclick="showReport(<%=id%>,'<%=date[i].regTime%>', <%=i%>)"><%=i+1%></button>
                    <%}%>
                </div>
                <div class="btn-group mr-2" role="group" aria-label="Second group">
                    <button class="btn btn-warning" style="margin-bottom: 10px;margin-left:30px" onclick="clickNewBtn()">NEW</button>
                </div>
                <h3 id="h_date" style="visibility: hidden">&nbsp;</h3>
            </td>
            <td>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">학생 ID</span>
                    </div>
                    <input type="text" class="form-control" placeholder="INPUT ID" id="studentId" value="<%=gid%>">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary" type="button" onclick="registerId(<%=id%>)">저장</button>
                    </div>
                </div>
            </td>
        </tr>
    </table>
    <div>
        <div class="input-group mb-3" >
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">유형</label>
            </div>
            <div  style="width:20%">
                <select id="homeworkType"  class="custom-select" id="inputGroupSelect01">
                    <option value="A">백준</option>
                    <option value="B">기타</option>
                </select>
            </div>

            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" onclick="addHomework()">추가</button>
            </div>
        </div>
        <table class="table table-hover" style="margin-top : 30px">
            <thead>
                <tr>
                    <th width="15%">유형</th>
                    <th width="55%">내용</th>
                    <th width="15%">풀이</th>
                    <th width="15%">#</th>
                </tr>
            </thead>
            <tbody id="my_tbody"></tbody>
        </table>
    </div>
    <div style="text-align: center">
        <button type="button" class="btn btn-primary" onclick="saveHomework(<%=id%>)">저장</button>
        <button type="button" class="btn btn-danger" style="display:none" id="deleteBtn" onclick="deleteHomework(<%=id%>)">삭제</button>
    </div>

    <script src="/script/showStudent.js"></script>
</body>
</html>

